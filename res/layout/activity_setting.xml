<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jsako="http://schemas.android.com/apk/res/com.jsako.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.jsako.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        jsako:desc_off="自动更新已经关闭"
        jsako:desc_on="自动更新已经开启"
        jsako:itemtitle="设置自动更新" />

    <com.jsako.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        jsako:desc_off="显示号码归属地已经关闭"
        jsako:desc_on="显示号码归属地已经开启"
        jsako:itemtitle="设置显示号码归属地" />

    <com.jsako.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_choose_addresshow_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        android:clickable="true"
        jsako:itemtitle="归属地提示框风格" />

    <com.jsako.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        jsako:desc_off="黑名单拦截已经关闭"
        jsako:desc_on="黑名单拦截已经开启"
        jsako:itemtitle="黑名单拦截设置" />
    
     <com.jsako.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_watchdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        jsako:desc_off="程序锁关闭"
        jsako:desc_on="程序锁开启"
        jsako:itemtitle="程序锁设置" />

</LinearLayout>